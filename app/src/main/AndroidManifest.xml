<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dell.orps">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/parking"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignInActivity" />
        <activity android:name=".ParkingDetails"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".BookingActivity"
            android:parentActivityName=".ParkingDetails"/>
        <activity android:name=".DetailsActivity"
            android:parentActivityName=".BookingActivity"/>
        <activity android:name=".PaymentActivity"
            android:parentActivityName=".DetailsActivity"></activity>

    </application>

</manifest>