<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.orps.RegistrationSlip">
<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/progressBar1"
    android:layout_gravity="center"
    android:indeterminate="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:gravity="center"
        android:visibility="invisible"
        android:text="Guwahati Railway Parking"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/railway_parking" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_margin="8dp"
        android:text="Address : Paltan Bazaar, Guwahati, Assam"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/reciept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:text="e-reciept"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/book_Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textAlignment="center"
        android:visibility="invisible"
        android:layout_margin="8dp"
        android:layout_below="@+id/customer_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Reg_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:visibility="invisible"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:layout_below="@+id/book_Time"
        android:layout_alignLeft="@+id/book_Time"
        android:layout_alignStart="@+id/book_Time" />

    <TextView
        android:id="@+id/slot_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:visibility="invisible"
        android:layout_margin="8dp"
        android:textAlignment="center"
        ></TextView>
    <TextView
        android:id="@+id/vehicle_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Reg_no"
        android:textColor="#000000"
        android:visibility="invisible"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:layout_alignStart="@+id/Reg_no"
        android:layout_below="@+id/Reg_no"
        />

    <TextView
        android:id="@+id/booking_charges"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:visibility="invisible"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/vehicle_number"
        android:layout_alignStart="@+id/vehicle_number"
        android:layout_below="@+id/vehicle_number"
        android:text="Booking Charges :                    INR 30" />
    <ImageView
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qrCode"
        android:layout_gravity="center"/>


</LinearLayout>
